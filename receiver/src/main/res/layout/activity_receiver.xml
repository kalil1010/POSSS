<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Status Header -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="🔄 Initializing NFC system..."
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginBottom="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginBottom="12dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnReceive"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="📥 Load Card" />

            <Button
                android:id="@+id/btnNfcSettings"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="⚙️ NFC Settings" />

            <Button
                android:id="@+id/btnMonitor"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="📊 Monitor APDU"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Card Information -->
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="💳 Card Information"
            android:textSize="16sp" android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etReceiverName"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:enabled="false" android:hint="Cardholder Name"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etReceiverPan"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:enabled="false" android:hint="PAN (16 digits)"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etReceiverExpiry"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:enabled="false" android:hint="Expiry MM/YY"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etReceiverCvv"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:enabled="false" android:hint="CVV"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etReceiverTrack"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:enabled="false" android:hint="Track-2 Data"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etReceiverAmount"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:enabled="false" android:hint="Amount"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvCardInfo"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="No card loaded"
            android:padding="8dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginBottom="12dp" />

        <!-- APDU Monitor -->
        <ScrollView
            android:id="@+id/scrollMonitor"
            android:layout_width="match_parent" android:layout_height="200dp"
            android:background="@android:color/black"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvMonitorLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="APDU monitor ready...\n"
                android:textColor="@android:color/holo_green_light"
                android:textSize="10sp"
                android:fontFamily="monospace" />
        </ScrollView>

    </LinearLayout>
</ScrollView>
