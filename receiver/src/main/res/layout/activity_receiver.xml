<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Status Display -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Initializing NFC..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="@drawable/status_background"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Card Information Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CARD INFORMATION"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Cardholder Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cardholder Name"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/et_receiver_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:enabled="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- PAN -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Number"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/et_receiver_pan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:enabled="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Expiry Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Expiry Date"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/et_receiver_expiry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:enabled="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- CVV -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CVV"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/et_receiver_cvv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:enabled="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Track Data -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Track Data"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/et_receiver_track"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:enabled="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Amount -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/et_receiver_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:enabled="false" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card Details -->
        <TextView
            android:id="@+id/tv_card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No card loaded"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/info_background"
            android:layout_marginBottom="16dp" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Load Card from Backend"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btn_nfc_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open NFC Settings"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btn_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitor APDU"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- APDU Monitor Log -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_monitor_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APDU Monitor Log:\n"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textColor="@android:color/black" />

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>